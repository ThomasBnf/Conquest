{
  "name": "@conquest/db",
  "private": true,
  "type": "module",
  "scripts": {
    "db:generate": "dotenv -e ./.env -e ../../.env -- prisma generate",
    "db:push": "dotenv -e ./.env -e ../../.env -- prisma db push --skip-generate",
    "db:seed": "dotenv -e ./.env -e ../../.env -- prisma db seed",
    "db:migrate": "dotenv -e ./.env -e ../../.env -- prisma migrate dev",
    "db:deploy": "dotenv -e ./.env -e ../../.env -- prisma migrate deploy",
    "db:migrate-status": "dotenv -e ./.env -e ../../.env -- prisma migrate status"
  },
  "prisma": {
    "schema": "./src/prisma/schema.prisma",
    "seed": "bun run prisma/seed.ts"
  },
  "exports": {
    "./*": "./src/*.ts"
  },
  "dependencies": {
    "@conquest/env": "workspace:*",
    "@conquest/zod": "workspace:*",
    "@discordjs/rest": "^2.4.2",
    "@prisma/client": "^6.2.1",
    "@slack/web-api": "^7.6.0",
    "discord-api-types": "^0.37.115",
    "discourse2": "^1.1.23",
    "resend": "^4.1.1",
    "stripe": "^17.5.0"
  },
  "devDependencies": {
    "prisma": "^6.2.1",
    "dotenv-cli": "8.0.0"
  }
}
