{
  "name": "discord",
  "private": true,
  "type": "module",
  "scripts": {
    "dev": "bun run db:generate && dotenv -e ./.env -e ../../.env -- tsx src/index.ts --watch",
    "build": "bun run db:generate && dotenv -e ./.env -e ../../.env -- tsup src/index.ts",
    "start": "dotenv -e ./.env -e ../../.env -- node dist/index.cjs",
    "db:generate": "cd ../../packages/db && bun run db:generate",
    "typecheck": "tsc --noEmit"
  },
  "dependencies": {
    "date-fns": "^4.1.0",
    "discord-api-types": "^0.37.118",
    "discord.js": "^14.14.1",
    "express": "^4.21.2"
  },
  "devDependencies": {
    "@conquest/clickhouse": "workspace:*",
    "@conquest/db": "workspace:*",
    "@conquest/env": "workspace:*",
    "@conquest/trigger": "workspace:*",
    "@conquest/zod": "workspace:*",
    "@conquest/tsconfig": "workspace:*",
    "@types/express": "^5.0.0",
    "@types/node": "^20.11.24",
    "dotenv-cli": "8.0.0",
    "tsup": "^8.3.6",
    "tsx": "^4.19.2",
    "typescript": "^5.3.3"
  }
}
