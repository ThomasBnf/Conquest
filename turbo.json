{
  "$schema": "https://turborepo.org/schema.json",
  "globalDependencies": ["**/.env"],
  "globalEnv": [
    "DATABASE_URL",
    "AUTH_SECRET",
    "SLACK_TOKEN",
    "SLACK_APP_ID",
    "SLACK_CLIENT_SECRET",
    "SLACK_SIGNING_SECRET",
    "SLACK_BOT_TOKEN",
    "GOOGLE_API_KEY",
    "TRIGGER_SECRET_KEY",
    "LINKEDIN_CLIENT_SECRET",
    "LINKEDIN_APP_ID",
    "LIVESTORM_CLIENT_SECRET",
    "DISCORD_CLIENT_SECRET",
    "DISCORD_BOT_TOKEN",
    "STRIPE_SECRET_KEY",
    "RESEND_API_KEY",
    "DISCOURSE_SECRET_KEY",
    "GITHUB_CLIENT_SECRET"
  ],
  "ui": "stream",
  "tasks": {
    "topo": {
      "dependsOn": ["^topo"]
    },
    "dev": {
      "inputs": ["$TURBO_DEFAULT$", ".env"],
      "dependsOn": ["^db:generate"],
      "persistent": true,
      "cache": false
    },
    "build": {
      "env": ["NODE_ENV", "VERCEL", "VERCEL_ENV"],
      "inputs": ["$TURBO_DEFAULT$", ".env"],
      "dependsOn": ["^db:generate", "^db:deploy", "^build"],
      "outputs": [
        ".next/**",
        "!.next/cache/**",
        "next-env.d.ts",
        ".expo/**",
        "dist/**"
      ]
    },
    "start": {
      "cache": false
    },
    "test": {
      "cache": false
    },
    "clean": {
      "cache": false
    },
    "jobs": {
      "persistent": true,
      "cache": false
    },
    "lint": {
      "dependsOn": ["^topo"]
    },
    "typecheck": {
      "dependsOn": ["^topo"],
      "outputs": ["node_modules/.cache/tsbuildinfo.json"]
    },
    "db:generate": {
      "cache": false
    },
    "db:push": {
      "cache": false
    },
    "db:deploy": {
      "cache": false
    }
  }
}
