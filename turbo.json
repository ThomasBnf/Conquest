{
  "$schema": "https://turborepo.org/schema.json",
  "globalDependencies": ["**/.env"],
  "globalEnv": ["AUTH_SECRET", "DATABASE_URL", "DIRECT_URL"],
  "envMode": "loose",
  "tasks": {
    "topo": {
      "dependsOn": ["^topo"]
    },
    "dev": {
      "inputs": ["$TURBO_DEFAULT$", ".env"],
      "dependsOn": ["^db:generate"],
      "persistent": true
    },
    "build": {
      "env": ["NODE_ENV", "VERCEL", "VERCEL_ENV", "DATABASE_URL"],
      "inputs": ["$TURBO_DEFAULT$", ".env"],
      "dependsOn": [
        "^db:generate",
        "^db:deploy",
        "^clickhouse:migrate",
        "^build"
      ],
      "outputs": [".next/**", "!.next/cache/**", "dist/**", "next-env.d.ts"]
    },
    "start": {
      "cache": false
    },
    "test": {
      "cache": false
    },
    "clean": {
      "cache": false
    },
    "jobs": {
      "persistent": true,
      "cache": false
    },
    "lint": {
      "dependsOn": ["^topo"]
    },
    "typecheck": {
      "dependsOn": ["^topo"],
      "outputs": ["node_modules/.cache/tsbuildinfo.json"]
    },
    "db:generate": {
      "cache": false
    },
    "db:push": {
      "cache": false
    },
    "db:deploy": {
      "cache": false
    },
    "clickhouse:migrate": {
      "cache": false
    }
  }
}
