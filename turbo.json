{
  "$schema": "https://turborepo.org/schema.json",
  "globalDependencies": ["**/.env"],
  "globalEnv": ["DATABASE_URL"],
  "ui": "stream",
  "tasks": {
    "topo": {
      "dependsOn": ["^topo"]
    },
    "dev": {
      "inputs": ["$TURBO_DEFAULT$", ".env"],
      "dependsOn": ["^db:generate"],
      "persistent": true,
      "cache": false
    },
    "build": {
      "env": [
        "VERCEL",
        "VERCEL_ENV",
        "NODE_ENV",
        "AUTH_SECRET",
        "SLACK_TOKEN",
        "SLACK_APP_ID",
        "SLACK_CLIENT_SECRET",
        "SLACK_SIGNING_SECRET",
        "NEXT_PUBLIC_SLACK_CLIENT_ID",
        "DISCOURSE_SECRET_KEY",
        "DISCORD_CLIENT_SECRET",
        "DISCORD_BOT_TOKEN",
        "NEXT_PUBLIC_DISCORD_CLIENT_ID",
        "LINKEDIN_CLIENT_SECRET",
        "NEXT_PUBLIC_LINKEDIN_CLIENT_ID",
        "LIVESTORM_CLIENT_SECRET",
        "NEXT_PUBLIC_LIVESTORM_CLIENT_ID",
        "STRIPE_SECRET_KEY",
        "NEXT_PUBLIC_STRIPE_PUBLISHABLE_KEY",
        "RESEND_API_KEY",
        "GOOGLE_API_KEY",
        "NEXT_PUBLIC_BASE_URL",
        "NODE_ENV",
        "VERCEL",
        "VERCEL_ENV"
      ],
      "inputs": ["$TURBO_DEFAULT$", ".env"],
      "dependsOn": ["^db:generate", "^db:deploy", "^build"],
      "outputs": [
        ".next/**",
        "!.next/cache/**",
        "next-env.d.ts",
        ".expo/**",
        "dist/**"
      ]
    },
    "start": {
      "cache": false
    },
    "test": {
      "cache": false
    },
    "clean": {
      "cache": false
    },
    "jobs": {
      "persistent": true,
      "cache": false
    },
    "lint": {
      "dependsOn": ["^topo"]
    },
    "typecheck": {
      "dependsOn": ["^topo"],
      "outputs": ["node_modules/.cache/tsbuildinfo.json"]
    },
    "db:generate": {
      "cache": false
    },
    "db:push": {
      "cache": false
    },
    "db:deploy": {
      "cache": false
    }
  }
}
